<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    
    <link rel="icon" type="image/png" href="favicon-32x32.png" sizes="32x32" />
    <link rel="icon" type="image/png" href="favicon-16x16.png" sizes="16x16" />


    @*<meta content="/images/icoSiteTeste.png" itemprop="image">
    <link rel="SHORTCUT ICON" href="/images/favicon.ico" type="image/x-icon" />
    <link rel="ICON" href="/images/favicon.ico" type="image/ico" />*@
</head>

@Html.Partial("_CheckDBPartial")

<body id="mainBody">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Bem-Vindo", "Login", "Account", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse" style="color: #CCCCCC;font-weight: bold;">
                <ul class="nav navbar-nav">
                    @{
                        if (Request.IsAuthenticated)
                        {
                            <li>@Html.ActionLink("Currículo", "Index", "Home")</li>
                            <li>@Html.ActionLink("Certificados", "Index", "Certificado")</li>
                            <li>@Html.ActionLink("Ferramentas Utilizadas", "Index", "Ferramenta")</li>
                        }
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr id="hrLinhaSeparadora" />
        <footer id="footer_principal">
            <p>&copy; @DateTime.Now.Year - Perfil Currícular - MVC Application</p>
        </footer>
    </div>
</body>
</html>
